{
  "display": "Express.js",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJS",
    "rootDir": "./src/",
    "esModuleInterop": true,
    "outDir": "./dist/",
    "importHelpers": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "sourceMap": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}