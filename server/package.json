{
  "name": "server",
  "version": "1.0.0",
  "main": "dist/shared/infra/http/server.js",
  "private": true,
  "scripts": {
    "lint": "eslint --ext ./src/**/*.ts ./src/**/*.ts",
    "lint:fix": "eslint --ext .ts --fix ./src/**/*.ts",
    "format": "prettier --check --write **/*.ts",
    "check": "sh ./scripts/check.sh",
    "check:env": "pnpm ts-node src/utils/check.ts",
    "clear": "sh ./scripts/clear_db.sh",
    "clear:docker": "sh ./scripts/clear_docker.sh",
    "build": "pnpm run check:env && rimraf dist && cross-env NODE_ENV=production swc src -d dist",
    "dev": "pnpm run check:env && cross-env NODE_ENV=development nodemon --ext ts --exec node --inspect -r @swc/register src/shared/infra/http/server.ts",
    "start": "pnpm run check:env && pnpm run build && cross-env NODE_ENV=production node dist/shared/infra/http/server.js",
    "migrate:dev": "pnpm run check:env && dotenv -e ./.env.development sh ./scripts/migrate_dev.sh",
    "migrate:prod": "pnpm run check:env && dotenv -e ./.env.production sh ./scripts/migrate_prod.sh",
    "generate:mysql": "pnpm run check:env && sh ./scripts/generate_mysql.sh",
    "generate:mongo": "pnpm run check:env && sh ./scripts/generate_mongo.sh",
    "test": "jest",
    "test:unit": "jest src/__tests__/unit/**/*.test.ts",
    "test:e2e": "jest src/__tests__/integration/**/*.e2e.test.ts",
    "test:coverage": "rimraf coverage && jest --coverage"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.484.0",
    "@prisma/client": "5.7.1",
    "@socket.io/redis-adapter": "^8.2.1",
    "assert": "^2.1.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "crypto-js": "^4.2.0",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^7.3.0",
    "dotenv-flow": "^4.1.0",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-prom-bundle": "^6.6.0",
    "express-rate-limit": "^7.1.5",
    "google-auth-library": "^9.4.1",
    "helmet": "^7.1.0",
    "jest-extended": "^4.0.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "1.4.5-lts.1",
    "node-fetch": "^2.7.0",
    "prom-client": "^15.1.0",
    "redis": "^4.6.12",
    "reflect-metadata": "^0.2.1",
    "socket.io": "^4.7.2",
    "ts-node": "^10.9.2",
    "tsyringe": "^4.8.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@swc-node/register": "^1.6.8",
    "@swc/cli": "^0.1.63",
    "@swc/core": "^1.3.78",
    "@swc/jest": "^0.2.29",
    "@swc/register": "^0.1.10",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/crypto-js": "^4.2.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.6",
    "@types/node-fetch": "^2.6.10",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "3.0.5",
    "nodemon": "^3.0.2",
    "prettier": "^2.8.8",
    "prisma": "5.7.1",
    "prisma-markdown": "^1.0.8",
    "rimraf": "^5.0.5",
    "socket.io-client": "^4.7.2",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}